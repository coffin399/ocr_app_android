<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme using AppCompat - NoActionBar for custom Toolbar -->
    <style name="Theme.OCRApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <!-- Darker variant of primary color -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- Accent color -->
        <item name="colorAccent">@color/accent</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- Disable window action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme overlay for dark action bar -->
    <style name="ThemeOverlay.AppCompat.Dark.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>
</resources>
