<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme using AppCompat -->
    <style name="Theme.OCRApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <!-- Darker variant of primary color -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!-- Accent color -->
        <item name="colorAccent">@color/accent</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- Theme overlay for dark action bar -->
    <style name="ThemeOverlay.AppCompat.Dark.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>
</resources>
